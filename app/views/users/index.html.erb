<h1>Gente</h1>
<% if @users.count <= 0 %>
  <p class='text-danger'>No hay personas disponibles.</p><br>
<% else %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th width='21%'>Mote</th>
      <th width='21%'>Nombre</th>
      <th width='21%'>Apellido paterno</th>
      <th width='21%'>Apellido materno</th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>
  <tbody>
    <% @users.order('name, last_name, second_last_name').each do |user| %>
      <tr>
        <td><%= link_to "#{user.nickname}", user_path(user) %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.second_last_name %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= sign_up_path %>'" > Nuevo </button>